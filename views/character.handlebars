<head>
    <title>Search Character</title>
    <link rel="stylesheet" href="/css/character.css" type="text/css">
</head>

<body>
    <nav class="nav text-center">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/04/MarvelLogo.svg/1280px-MarvelLogo.svg.png"
                class="logo h-auto img-responsive my-2" style="height: 175px; width: 125px; margin: 0px auto;">
        </div>
        <div class="col-lg-2">
            <button type="button" class="btn" id="logoutbtn">Logout</button>
        </div>
    </nav>
    <div class="container h-auto">
        <div class="searchform">
            <form>
                <div class="form-group text-center my-2">
                    <h1 class="searchforanymarvelcharacter">Search for ANY Marvel Character!</h1>
                    <input type="search" class="form-control" id="searchedChar" placeholder="Ex. Hulk, Wolverine, Thor">
                    <button type="submit" class="btn my-2 mx-2" id="searchbtn">Search <i
                            class="fas fa-search ml-1"></i></button>
                    <button type="button" class="btn my-2" id="profilebtn">â¬… Back to Profile</button>
                </div>
            </form>
        </div>
        <div class="characterdisplay text-center"></div>
    </div>
    <script type="text/javascript" src="/js/character.js"></script>
</body>